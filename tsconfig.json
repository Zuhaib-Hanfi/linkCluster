{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,           // Ignore type errors in dependencies
    "strict": true,                 // Keep strict checks for your code
    "noEmit": true,                 // Donâ€™t output JS files (Next.js handles this)
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",  // Works well with Next.js 13+
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
